{
  "name": "agent-context-toolkit",
  "displayName": "Agent Context Toolkit",
  "description": "Utilidades pr치cticas para Cursor y VSCode que exponen contexto Selenium, dependencias y automatizaciones del repositorio agent-kit.",
  "version": "0.3.1",
  "publisher": "fabrijk",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:agent.context.openQuickPick",
    "onCommand:agent.dependencies.refresh",
    "onCommand:agent.configure",
    "onCommand:agent.doneSound",
    "onCommand:agent.scanProject",
    "onCommand:agent.runBootstrap",
    "onCommand:agent.runSeleniumExport",
    "onCommand:agent.runDeptrac",
    "onCommand:agent.runSeleniumModules",
    "onCommand:agent.scaffoldAgent",
    "onCommand:agent.customActions.configure",
    "onCommand:agent.runCustomAction",
    "onView:agentContextView",
    "onView:agentComposerView",
    "onView:agentWorkbenchPanel"
  ],
  "main": "./extension.js",
  "scripts": {
    "lint": "echo \"No hay lint definido\"",
    "package": "vsce package",
    "package:darwin-arm64": "vsce package --target darwin-arm64"
  },
  "contributes": {
    "commands": [
      {
        "command": "agent.context.openQuickPick",
        "title": "Agent: Mostrar contextos disponibles"
      },
      {
        "command": "agent.dependencies.refresh",
        "title": "Agent: Refrescar dependencias Composer"
      },
      {
        "command": "agent.configure",
        "title": "Agent: Configurar extensi칩n"
      },
      {
        "command": "agent.doneSound",
        "title": "Agent: Reproducir sonido de finalizaci칩n"
      },
      {
        "command": "agent.scanProject",
        "title": "Agent: Escanear proyecto y actualizar metadata"
      },
      {
        "command": "agent.runBootstrap",
        "title": "Agent: Ejecutar bootstrap.sh"
      },
      {
        "command": "agent.runSeleniumExport",
        "title": "Agent: Exportar contexto Selenium"
      },
      {
        "command": "agent.runDeptrac",
        "title": "Agent: Ejecutar an치lisis Deptrac"
      },
      {
        "command": "agent.scaffoldAgent",
        "title": "Agent: Crear carpeta agent/"
      },
      {
        "command": "agent.installAgentKit",
        "title": "Agent: Instalar Agent Kit"
      },
      {
        "command": "agent.reinstallAgentKit",
        "title": "Agent: Reinstalar Agent Kit"
      },
      {
        "command": "agent.cleanAgentKit",
        "title": "Agent: Limpiar Agent Kit"
      },
      {
        "command": "agent.customActions.configure",
        "title": "Agent: Gestionar botones personalizados"
      },
      {
        "command": "agent.runCustomAction",
        "title": "Agent: Ejecutar bot칩n personalizado"
      },
      {
        "command": "agent.runSeleniumModules",
        "title": "Agent: Ejecutar tests Selenium"
      },
      {
        "command": "agent.ai.configure",
        "title": "Agent: Configurar agente IA"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "agentWorkbench",
          "title": "Agent",
          "icon": "resources/agent.svg"
        }
      ]
    },
    "views": {
      "agentWorkbench": [
        {
          "type": "webview",
          "id": "agentWorkbenchPanel",
          "name": "Panel del agente"
        }
      ],
      "explorer": [
        {
          "id": "agentContextView",
          "name": "Agent Contextos"
        },
        {
          "id": "agentComposerView",
          "name": "Agent Composer"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Agent Toolkit",
      "properties": {
        "agentToolkit.soundFile": {
          "type": "string",
          "default": "",
          "description": "Ruta al archivo de sonido personalizado. Usa ~ para el home. Vac칤o en macOS usa Glass.aiff."
        },
        "agentToolkit.soundMessage": {
          "type": "string",
          "default": "游댒 El agente termin칩 su trabajo",
          "description": "Mensaje a mostrar cuando el sonido de finalizaci칩n se dispara."
        },
        "agentToolkit.preset": {
          "type": "string",
          "default": "",
          "description": "Identificador del preset a usar (vac칤o intenta detectarlo autom치ticamente)."
        },
        "agentToolkit.workspaceRoot": {
          "type": "string",
          "default": "",
          "description": "Si trabajas fuera del repositorio ra칤z, indica la ruta base para localizar los archivos exportados."
        }
      }
    }
  },
  "devDependencies": {
    "@vscode/vsce": "^2.24.0"
  }
}
